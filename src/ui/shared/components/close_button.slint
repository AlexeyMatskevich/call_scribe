import { IconButton } from "buttons/mod.slint";

// Close button (X icon) for dialogs, panels, drawers
export component CloseButton inherits Rectangle {
    callback clicked();

    width: button.width;
    height: button.height;

    button := IconButton {
        icon: @image-url("../../assets/icons/close.svg");
        accessible-text: "Close";
        clicked => {
            root.clicked();
        }
    }
}
