import { IconButton } from "../../shared/mod.slint";

// Hamburger menu button for mobile navigation
export component HamburgerButton inherits Rectangle {
    callback clicked();

    width: button.width;
    height: button.height;

    button := IconButton {
        icon: @image-url("../../assets/icons/hamburger.svg");
        accessible-text: "Open menu";
        clicked => {
            root.clicked();
        }
    }
}
